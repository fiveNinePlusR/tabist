{

    "description": "Quick Tab Switcher",
    "manifest_version": 2,
    "name": "Tabist",
    "version": "0.1.6",
    "homepage_url": "https://github.com/fiveNinePlusR/tabist",
    "icons": {
        "48": "icons/page-48_white.png"
    },

    "permissions": [
      "tabs",
      "storage",
      "downloads"
    ],

  "background": {
      "scripts": ["background.js"]
  },

  "browser_action": {
      "default_icon": "icons/page-32_white.png"
  },

  "sidebar_action": {
    "default_icon": "icons/page-32_white.png",
    "default_title" : "Tabist",
    "default_panel": "tabs.html"
  },

  "commands": {
      "toggle-tabist": {
          "suggested_key": {
              "default": "Ctrl+Shift+E",
              "mac": "Ctrl+Shift+E",
              "windows": "Ctrl+Shift+E"
          }, 
          "description": "Toggle or activate a Tabist tab"
      }
  }
}

